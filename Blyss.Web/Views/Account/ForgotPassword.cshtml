@model ForgottenPasswordBindingModel
<div class="col-md-4 offset-md-4 mt-5">
    <div class="card">
        <div class="card-header">
            <h3 class="mb-0 text-center">Recover password</h3>
        </div>
        <div class="card-body">

            <success message="@ViewBag.Confirm"></success>
            <error message="@ViewBag.Error"></error>

            <form asp-controller="Account" asp-action="ForgotPassword" method="POST">
                <div class="form-group">
                    <label asp-for="Identifier">E-Mail or Username</label>
                    <input asp-for="Identifier" type="text" class="form-control" placeholder="Please enter E-Mail or Username..."/>
                    <span asp-validation-for="Identifier" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary float-right">Reset your password</button>
                </div>
            </form>
        </div>
    </div>
</div>