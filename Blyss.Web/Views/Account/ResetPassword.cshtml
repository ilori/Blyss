@model ResetPasswordBindingModel

<div class="col-md-4 offset-md-4 mt-5">
    <div class="card">
        <div class="card-header">
            <h3 class="mb-0 text-center">Reset Password</h3>
        </div>
        <div class="card-body">

            <error message="@ViewBag.Error"></error>

            <form asp-controller="Account" asp-action="ResetPassword" method="POST">
                <div class="form-group">
                    <label asp-for="NewPassword">Enter New Password</label>
                    <input asp-for="NewPassword" type="password" class="form-control" placeholder="New Password..."/>
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword">Confirm Your Password</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password..."/>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary float-right">Reset password</button>
                </div>
            </form>
        </div>
    </div>
</div>